<div class="actions">
{{we-action-create-btn resourceName req currentVocabulary.id}}
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>{{t 'text'}}</th>
      <th>{{t 'actions'}}</th>
    </tr>
  </thead>
  <tbody>

{{#each record}}
  <tr>
    <td>{{id}}</td>
    <td>{{text}}</td>
    <td>
      {{we-action-view-btn ../resourceName this ../req ../currentVocabulary.id id}}
      {{we-action-edit-btn ../resourceName this ../req ../currentVocabulary.id id}}
      {{we-action-delete-btn ../resourceName this ../req ../currentVocabulary.id id}}
    </td>
  </tr>
{{/each}}

  </tbody>
  <tfoot>
    <td colspan="3">
      <div class="paginate-sumary">
        {{t 'paginate.sumary' recordsLength=record.length count=metadata.count}}
      </div>
      {{paginate count=metadata.count limit=query.limit currentPage=query.page req=req}}
    </td>
  </tfoot>
</table>

<form role="form">

  <div class="form-group">
    <label>{{t 'vocabulary.field.name.label'}}</label>
    {{input name="name" value=model.vocabulary.name type="text" placeholderTranslation="vocabulary.field.name.placeholder" required="true" classNames="form-control"}}

    <p class="help-block">{{t 'vocabulary.field.name.description'}}</p>
  </div>


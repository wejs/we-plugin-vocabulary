<form role="form">

  <div class="form-group">
    <label>{{t 'term.field.text.label'}}</label>
    {{input name="text" value=model.newTerm.text type="text" placeholderTranslation="term.field.text.placeholder" required="true" classNames="form-control"}}

    <p class="help-block">{{t 'term.field.text.help'}}</p>
  </div>

  <div class="form-group">
    <label>{{t 'term.field.description.label'}}</label>

    {{textarea name="description" value=model.newTerm.description classNames="form-control" rows=6}}

    <p class="help-block">{{t 'term.field.description.help'}}</p>
  </div>

  <button {{action "createTerm"}} type="submit" class="btn btn-primary">{{t 'Create'}}</button>


  <button {{action "hideCreateTermForm"}} type="submit" class="btn btn-primary">{{t 'Cancel'}}</button>

</form>

<hr>